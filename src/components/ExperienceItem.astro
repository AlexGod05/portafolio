---
import ClientItem from './ClientItem.astro'

interface Props {
    company: string
    description: string
    date: string
    listClient: {
        name: string
        url: string
        src: string
    }[]
}

const { company, description, date, listClient } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">{date}</time
>
<h3 class="text-lg font-semibold text-yellow-200 mt-2">
  {company}
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-balance">
  {description}
</p>
<h3 class="text-lg font-normal text-red-200 mt-2">
    Clientes
</h3>
<div class="grid grid-cols-3 gap-8 lg:gap-16 m-5 items-center ">
    {listClient.map((client) => (
        <ClientItem {...client}/>
    ))}
</div>